script(type='text/x-template')#skills-list
    ul.skill-list
        li.skill-list__item.skills-row(v-for="skill in skills")
            skills-row(
                :skill="skill"
            )

script(type="text/x-template")#skills-row
    .skills-row__title {{skill.skillsGroup}}
        ul.skill-row__list
            li.skill-row__item(v-for="(skillPercents, skillName) in skill.skills")
                skill(
                    :skillName="skillName"
                    :skillPercents="skillPercents"
                )
                
script(type="text/x-template")#skill
    figure.skill
        svg(viewbox='0 0 100 100' preserveAspectRatio='none').skill__figure#skill__figure
            circle(cx='50' cy='50' r='40').skill__circle.skill__circle_inder
            circle(cx='50' cy='50' r='40' ref="color-circle").skill__circle.skill__circle_above
        .skill__title {{skillName}}