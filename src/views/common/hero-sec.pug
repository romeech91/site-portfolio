mixin hero-header(section, name, desc, iconBg, descPos, fontFamily, arrow)
    section(class=`${section}`)
      .hamburger.ham-toggle
        .line.one
        .line.two
        .line.three

      .hamburger-menu-bg#hamburger-menu-bg
        .left
        .right

      nav.hamburger-menu#hamburger-menu

        ul(role="navigation").hamburger-menu__list

          li.hamburger-menu__list-item
            a(href="/works").hamburger-menu__nav-link
              span.hamburger-menu__link-text Мои работы

          li.hamburger-menu__list-item
            a(href="/blog").hamburger-menu__nav-link
                span.hamburger-menu__link-text Блог

          li.hamburger-menu__list-item
            a(href="/about").hamburger-menu__nav-link
                span.hamburger-menu__link-text Обо мне

          li.hamburger-menu__list-item
            a(href="/").hamburger-menu__nav-link
                span.hamburger-menu__link-text Главная
      -
        var socials = [
          ['vk', 'http://vk.com'],
          ['github', 'http://github.com'],
          ['in', 'http://in.com']
        ]
      ul.socials.hero__links
        each item in socials
          li.socials__item
            a(href=`${item[1]}`).socials__link
              +icon(item[0], 'socials__link-icon')
      .hero__menu
        +icon('hamburger', 'hambg-menu')
      .hero__title
        +icon(`${iconBg}`, 'section-title__pic')
      .hero__user.user
        .user__pic
        .user__description(class=`${descPos}`)
            div(class=`${fontFamily}`).user__name=(`${name}`) 
            .user__info=(`${desc}`)
      div(class=`${arrow}`).down-btn
        +icon('arrow_down', 'hero__down-btn')