extends ../main.layout.pug

block variables
    - var title = 'Мои работы'

block content
    .hero__bg-beige.hero__bg-full
    include ../common/hero-sec.pug
    +hero-header('hero-works', 'Казаков Роман', 'Личный сайт разработчика')
    .works__block-title
        .block-title.block-title_works Мои работы
    section.my-works
        .my-works__left
            .block-subtitle.works__site-name Сайт магазина бургеров
            .works__site-desc Html, Css, Javascript
            a.works__site-link(href="#") Посмотреть сайт
                +icon('link', 'works__site-link_pic')
        .my-works__right
            .widget
                .widget__main-preview
                .widget__btns-preview
                    .widget__btn-down
                        +icon('portf_arrow_down', 'widget__btn-down_pic')
                    .widget__btn-up
                        +icon('portf_arrow_up', 'widget__btn-up_pic')
    section.about-me
        .about-me__title
            .about-me__title-inner.block-title Что обо мне говорят
        .about-me__feedback
            form.form
                .block-subtitle.subtitle-form Cвязаться со мной
                .form__inputs
                    input.form__input(type="text", placeholder='Имя')
                    input.form__input(type="text", placeholder='Email')
                    textarea(name="", cols="10", rows="8", type="text", placeholder='Ваше сообщение').form__textarea
                .form__buttons
                    button(type="submit").form__btn-submit.form__btn Отправить
                    button(type="reset").form__btn-clear.form__btn Очистить